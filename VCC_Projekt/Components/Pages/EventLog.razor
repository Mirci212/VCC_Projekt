@page "/eventlogs"
@using VCC_Projekt.Data

<MudText Typo="Typo.h5" Class="mb-4">Event Logs</MudText>

<MudDataGrid T="EventLogViewModel"
             Items="@eventLogViewModels"
             Dense="true"
             Hover="true"
             Bordered="true"
             Striped="true"
             SortMode="SortMode.Multiple"
             Filterable="true"
             QuickFilter="@_quickFilter"
             Hideable="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Event Logs</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.EventLogID" Title="ID" />
        <PropertyColumn Property="x => x.Tabellenname" Title="Table Name" />
        <PropertyColumn Property="x => x.Beschreibung" Title="Description" />
        <PropertyColumn Property="x => x.Zeit" Title="Time" Format="dd.MM.yyyy HH:mm:ss" />
        <PropertyColumn Property="x => x.KategorieBeschreibung" Title="Category" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="EventLogViewModel" />
    </PagerContent>
</MudDataGrid>