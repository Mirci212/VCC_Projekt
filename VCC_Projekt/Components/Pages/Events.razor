@page "/events"
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Events</PageTitle>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 font-weight-bold" style="color: #134883;">Kommende Events</h1>
        <p class="lead text-muted">
            Sei dabei und erlebe die nächsten spannenden Programmier-Herausforderungen!
        </p>
    </div>

    <div class="row gx-4">
        @foreach (var eventItem in dbContext.Events.Where(e => e.Beginn >= DateTime.Now).OrderBy(e => e.Beginn))
        {
            <div class="col-md-6 d-flex mb-4">
                <div class="card mx-auto" style="flex: 1; border-color: #134883;">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">@eventItem.Bezeichnung</h4>
                        <p class="card-text flex-grow-1">
                            <strong>Datum:</strong> @eventItem.Beginn.ToString("d. MMMM yyyy", new System.Globalization.CultureInfo("de-DE"))<br>
                        </p>
                        <div class="text-center mt-auto">
                            <a href="@GetEventLink(eventItem.EventID)" class="w-50 btn btn-lg btn-success">Jetzt anmelden</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <div class="mt-4">
        <h2>Warum teilnehmen?</h2>
        <p>
            Egal ob Anfänger:in oder Profi – die VCC-Events bieten jedem die Möglichkeit, 
            in spannenden Challenges seine Skills zu testen, Spaß zu haben und tolle Preise zu gewinnen.
        </p>
    </div>

    <div class="mt-4">
        <h2>Noch Fragen?</h2>
        <p>
            Kontaktiere uns unter: <a href="mailto:vcc.htlvb@gmail.com?subject=Support%20Anfrage" class="text-primary">vcc@htlvb.at</a>
        </p>
    </div>

    <div class="text-center mt-5">
        <a class="w-25 btn btn-lg btn-success" href="/info">Mehr über VCC erfahren</a>
        <p></p>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: transform 0.2s;
        border: 2px solid #134883;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .btn-success {
        background-color: #134883;
        border-color: #134883;
    }

        .btn-success:hover {
            background-color: #2f5e91;
            border-color: #2f5e91;
        }

    h1, h2, h3 {
        color: #134883;
    }
</style>